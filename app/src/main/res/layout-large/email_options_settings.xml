<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/email_option_root_view">
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent"
        >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:focusable="true"
    android:focusableInTouchMode="true">
	<TextView android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    android:text="@string/recipient_title"
	    android:layout_marginTop="10dp"
	    android:textStyle="bold"
	    android:textColor="#FFFFFF"/>
	<LinearLayout android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_margin="5dp">
	    <RelativeLayout
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content" 
           >
	    <com.olympus.dmmobile.settings.ChipsMultiAutoCompleteTextview
	        android:id="@+id/edit_recipients"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"
	        android:inputType="textMultiLine|textNoSuggestions|textEmailAddress"
	        android:imeOptions="actionDone"
	        android:layout_toLeftOf="@+id/mailBtn"/>
	    <requestFocus />
	   <Button android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="+"
	        android:layout_alignParentRight="true"
	       android:textStyle="bold"
	       android:id="@+id/mailBtn"
	      android:layout_centerInParent="true"
	       android:textColor="#000000"
	       android:gravity="center"
	       android:textSize="19sp"/>
	   </RelativeLayout>
    </LinearLayout>
     
	<TextView android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/subject_title"
	    android:layout_margin="5dp"
	    android:textStyle="bold"
	    android:textColor="#FFFFFF"/>
	<EditText android:id="@+id/edit_subject"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:inputType="textEmailSubject|textCapSentences"
	    android:imeOptions="actionDone"
	    android:maxLength="64"/>
	<TextView android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/message_title"
	    android:layout_margin="5dp"
	    android:textStyle="bold"
	    android:textColor="#FFFFFF"/>
	<EditText android:id="@+id/edit_message_body"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:minHeight="120dp"
	    android:inputType="textCapSentences|textMultiLine"
	    android:imeOptions="normal"
	    android:maxLength="4096"/>
	<Button
	    android:id="@+id/small_delete"
	    style="?android:attr/buttonStyleSmall"
	    android:layout_width="wrap_content"
	    android:visibility="invisible"
	    android:layout_height="wrap_content"
	    android:text="Button" />
	</LinearLayout>
	</ScrollView>
</LinearLayout>