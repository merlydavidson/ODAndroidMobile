<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlashAirMain" >

    <LinearLayout
        android:id="@+id/linlay_title_flashair_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_activity_top_tab"
        android:gravity="center" >

        <TextView
            android:id="@+id/text_flashair_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="23sp"
            android:text="@string/Flashair_Label_Connect_Flashair" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rellay_done_flashair_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
		android:background="@drawable/bg_activity_top_tab"
         >

        <Button
            android:id="@+id/btn_done_flashair_connect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@drawable/flashair_done_selector"
            android:text="@string/Flashair_Label_Done"
            android:textSize="18sp" 
            android:layout_centerVertical="true"/>
        
        <ImageButton
            android:id="@+id/btn_update_wifi_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/flashair_refresh_selector" 
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
        
    </RelativeLayout>

    <TextView
        android:id="@+id/text_label_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linlay_title_flashair_main"
        android:padding="5dp"
        android:text="@string/Flashair_Label_Choose_SSID"
        android:textSize="18sp"
        android:textStyle="bold" />

    
    <ListView
        android:id="@+id/list_scan_res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_label_top"
        android:minHeight="70dp" 
        android:choiceMode="singleChoice"
        />
    
