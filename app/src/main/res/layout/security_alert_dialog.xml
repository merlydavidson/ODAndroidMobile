<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rel_security_dialog" >
    
	<TextView android:id="@+id/tv_msg_security"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/Recording_Alerts_Encrypt_File_Message"
	    android:gravity="center"/>
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/tv_msg_security"
	    android:orientation="horizontal"
	    android:gravity="center_horizontal"
	    android:layout_marginTop="10dp">
		<TextView android:id="@+id/tv_dont_show_again"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/Recording_Alerts_Dontshow"
		    android:gravity="center"
		    android:layout_gravity="center_vertical"/>
		<CheckBox android:id="@+id/check_dont_show"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="20dp"
		    android:layout_gravity="center_vertical"
		    android:checked="false"/>
    </LinearLayout>
</RelativeLayout>